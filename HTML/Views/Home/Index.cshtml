    <div class="container social">
        <div class="header">
            <div class="logo">
                <img src="~/Content/Images/1_0005_logo-.png" />
            </div>
            <div class="search">
                <div>
                    <div class="input-group s-first">
                        <input type="text" class="form-control" placeholder="Tôi muốn tìm...">
                        <span class="input-group-addon"><i class="fa fa-caret-down"></i></span>
                    </div>
                    <div class="input-group s-last">
                        <select class="form-control">
                            <option>Đà Nẵng</option>
